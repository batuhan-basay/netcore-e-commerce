@using MvcWebUl.Entity
@model IEnumerable<Product>

<div class="container">
    <div class="card-deck row">

        @foreach (var urun in Model)
        {

            <div class="card col-md-4">
                <img class="card-img-top" alt="@urun.Name" src="/Upload/@urun.Image">
                <div class="card-body">
                    <h5 class="card-title"><a href="/Home/Details/@urun.Id">@urun.Name</a> </h5>
                    <p class="card-text">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">@urun.Price</small>
                </div>
            </div>
        }

    </div>
</div>